<style>
.photo-scroller {
    overflow: hidden;
    width: 100%;
    margin: 2rem 0;
}

.scroller-track {
    display: flex;
    animation: scrollLeft 30s linear infinite;
}

.scroller-item {
    flex: 0 0 auto;
    margin-right: 20px;
}

.scroller-item img {
    height: 150px;
    width: auto;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}

/* Infinite scroll */
@@keyframes scrollLeft {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}

/* Optional: pause on hover */
.photo-scroller:hover .scroller-track {
    animation-play-state: paused;
}

/* Media query for large screens */
@@media (min-width: 1400px) {
    .experience-section {
        display: flex;
        flex-direction: column;
        align-items: center; /* center content horizontally */
        padding: 3rem 2rem;
    }

    .experience-section h1 {
        text-align: center; /* center heading */
    }

    .photo-scroller {
        max-width: 1200px; /* constrain the scroller width */
    }

    .scroller-track {
        justify-content: center; /* center the images inside the scroller */
    }
}
</style>

